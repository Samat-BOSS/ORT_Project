                        @Html.EditorFor(model => model.First_name, new { htmlAttributes = new { @class = "form-control", placeholder = "Имя выпускника" } })
                        @Html.ValidationMessageFor(model => model.First_name, "", new { @class = "text-danger", @display = "none" })
                    </div>
                </div>

                <div class="form-group col-sm-3">
                    @Html.LabelFor(model => model.Sur_name, "Фамилия", htmlAttributes: new { @class = "control-label col-sm-3", @style = "white-space:pre" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Sur_name, new { htmlAttributes = new { @class = "form-control", placeholder = "Фамилия выпускника" } })
                        @Html.ValidationMessageFor(model => model.Sur_name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-sm-3">
                    @Html.LabelFor(model => model.Third_name, "Отчество", htmlAttributes: new { @class = "control-label col-sm-3", @style = "white-space:pre" })
