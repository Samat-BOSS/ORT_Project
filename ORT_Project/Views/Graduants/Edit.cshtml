                        @Html.ValidationMessageFor(model => model.Authoriziation, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-inline row">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.Diplom_number, "Номер диплома", htmlAttributes: new { @class = "control-label col-sm-3" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Diplom_number, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Diplom_number, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-inline row">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => model.Attestat_number, "Номер аттестата", htmlAttributes: new { @class = "control-label col-sm-3" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Attestat_number, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Attestat_number, "", new { @class = "text-danger" })
